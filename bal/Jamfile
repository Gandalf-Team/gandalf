SubDir GANDALF_TOP bal ;

GandalfBalSources
    gio.c
    ;

GdIoctls libgdioctl.a : [ FDirName $(GANDALF_TOP) bal ioctl.txt ] ;

# Include arch, soc, platform headers
SubIncludeOnce GANDALF_TOP bal arch $(ARCH) ;
if $(SOC) {
    SubIncludeOnce GANDALF_TOP bal soc $(SOC) ;
}
SubIncludeOnce GANDALF_TOP bal platform $(PLATFORM) ;